{
    "configurations": [
        {
            "name": "(gdb) 1-C-Refresher",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/2-StudentDB/starter/stringfun",
            "args": ["-c 'hello world'"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/2-StudentDB/starter",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build 1-C-Refresher"
        }
    ]
}